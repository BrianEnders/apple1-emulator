<!-- http://www.trs-80.com/wordpress/zaps-patches-pokes-tips/internals/#keyboard13 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:keyboard="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/keyboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <com.enders.pomoneemulator.Key
            keyboard:id="key_1"
            keyboard:idShifted="key_EXCLAMATION_MARK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key
            keyboard:id="key_2"
            keyboard:idShifted="key_QUOT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key
            keyboard:id="key_3"
            keyboard:idShifted="key_HASH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key
            keyboard:id="key_4"
            keyboard:idShifted="key_DOLLAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_5"
            keyboard:idShifted="key_PERCENT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_6"
            keyboard:idShifted="key_AMP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_7"
            keyboard:idShifted="key_APOS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_8"
            keyboard:idShifted="key_BR_OPEN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_9"
            keyboard:idShifted="key_BR_CLOSE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_0"
            keyboard:idShifted="key_CARAT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <com.enders.pomoneemulator.Key

            keyboard:id="key_Q"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_W"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_T"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_Y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_U"
            keyboard:idShifted="key_BACKSLASH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_I"
            keyboard:idShifted="key_SQBRS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_O"
            keyboard:idShifted="key_SQBRE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_P"
            keyboard:idShifted="key_AT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">



        <com.enders.pomoneemulator.Key

            keyboard:id="key_A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_G"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_H"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_J"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_K"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_L"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_SEMICOLON"
            keyboard:idShifted="key_ADD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <com.enders.pomoneemulator.Key

            keyboard:id="key_SHIFT_LEFT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            keyboard:size="2" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_Z"
            keyboard:idShifted="key_ASTERIX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_X"
            keyboard:idShifted="key_EQUAL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_C"
            keyboard:idShifted="key_COLON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_V"
            keyboard:idShifted="key_SEMICOLON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_B"
            keyboard:idShifted="key_MINUS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_N"
            keyboard:idShifted="key_SLASH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_M"
            keyboard:idShifted="key_QUESTION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_LEFT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            keyboard:size="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <com.enders.pomoneemulator.Key

            keyboard:id="key_COMMA"
            keyboard:idShifted="key_LT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_SPACE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            keyboard:size="6" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_DOT"
            keyboard:idShifted="key_GT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.enders.pomoneemulator.Key

            keyboard:id="key_ENTER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            keyboard:size="2" />
    </LinearLayout>
</LinearLayout>
